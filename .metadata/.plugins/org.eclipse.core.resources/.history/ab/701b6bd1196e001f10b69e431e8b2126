#include <stdio.h>
#include <stdint.h>
#include "stm32f4xx.h"
#include "adc.h"
#include "uart.h"
#include "systick.h"

int main(void)
{


	while(1)
	{
		key = uart2_read();
		if(key == '1')
		{
			GPIOA->ODR |=  LED_PIN;
			start_conversion();
			sensor_value = adc_read();
			printf("Sensor value: %d\n\r",(int)sensor_value);
		}
		else{
			GPIOA->ODR &= ~LED_PIN;
		}

	}
}



